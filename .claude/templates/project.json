{
  "project": {
    "name": "示例项目",
    "type": "web-app"
  },

  "architecture": {
    "layers": {
      "presentation": ["React App", "REST API"],
      "core": ["核心业务逻辑"],
      "capabilities": ["能力模块"],
      "storage": ["数据库"]
    },
    "modules": {
      "ExampleModule": {
        "status": "done|partial|in_progress|planned",
        "deps": ["依赖的模块名"],
        "features": ["功能1", "功能2"],
        "index": {
          "interface": "path/to/Interface.java",
          "impl": "path/to/Impl.java",
          "service": "path/to/Service.java"
        }
      }
    }
  },

  "stack": {
    "backend": "java/spring-boot/maven",
    "frontend": "typescript/react/vite",
    "database": "sqlite/flyway"
  },

  "paths": {
    "backend_root": "backend/src/main/java/com/example/app",
    "backend_resources": "backend/src/main/resources",
    "frontend_root": "frontend/src",
    "migration_dir": "backend/src/main/resources/db/migration",
    "database": "data/app.db"
  },

  "patterns": {
    "dto_style": "record",
    "exception_class": "BusinessException",
    "state_management": "zustand",
    "component_library": "mantine",
    "log_style": "slf4j"
  },

  "conventions": {
    "entity": "PascalCase",
    "table": "snake_case",
    "api_path": "/api/{resource}",
    "component": "PascalCase"
  },

  "models": {
    "User": {
      "table": "user",
      "fields": ["id", "name", "email", "created_at"],
      "source": "T001"
    }
  },

  "apis": {
    "/api/users": {
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "desc": "用户管理",
      "source": "T001"
    }
  },

  "utils": {
    "UserService.validateEmail": {
      "layer": "backend",
      "desc": "邮箱格式校验",
      "source": "T001"
    }
  },

  "components": {
    "UserCard": {
      "desc": "用户信息卡片",
      "source": "T002"
    }
  }
}
